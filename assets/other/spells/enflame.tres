script/source = "extends SpellData


func can_cast_with_hand(hand):
	for x in hand.cards:
		if x.is_of_suit(0):
			return true
	
	return false


func can_cast_with_selection(selection):
	return selection.size() == 1 && selection[0].is_of_suit(0) && selection[0].value < 11


func card_selectable(card):
	return card.is_of_suit(0) && card.value < 11


func cast(owner, selection = []):
	owner.state.status_turns.append(StatusEffect.new(
		owner.data,
		\"damage\",
		round(selection[0].value * 0.5),
		1,
		owner.state.status_turns
	))
	owner.discard_cards(selection)

